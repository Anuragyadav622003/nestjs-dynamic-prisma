generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      UserRole @default(Viewer)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model ModelDefinition {
  id         String   @id @default(cuid())
  name       String   // REMOVED @unique constraint
  tableName  String   @unique  // Keep tableName unique
  fields     Json
  ownerField String?
  rbac       Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  isActive   Boolean  @default(true)

  @@map("model_definitions")
  @@unique([name, tableName]) // Add composite unique constraint
}

enum UserRole {
  Admin
  Manager
  Viewer
}